{% extends 'template.twig' %}

{% block content %}
<div class="page-header">
    <h3>Stox - Estoque</h3>
</div>
{% if app.my_session.has('error') %}
    <div class="alert alert-danger">
        {{app.my_session.flash('error')}}
    </div>
{% endif %}
{% if app.my_session.has('success') %}
    <div class="alert alert-success">
        {{app.my_session.flash('success')}}
    </div>
{% endif %}
<table class="table table-striped table-bordered">
    <tr>
        <th>#</th>
        <th>Produto</th>
        <th>Descrição</th>
        <th>Qtd Estoque</th>
        <th>Fornecedor</th>
        <th></th>
    </tr>
        {% for prod in produtos %}
        <tr>
            <td>{{prod.id}}</td>
            <td>{{prod.produto}}</td>
            <td>{{prod.descricao}}</td>
            <td>{{prod.estoque}}</td>
            <td>{{prod.fornecedor}}</td>
            <td> 
                <a href="{{app.url_auth}}/produtos/alterar/{{prod.id}}">
                    <div class="btn btn-default">Alterar</div>
                </a>
                <a href="{{app.url_auth}}/produtos/retirar/{{prod.id}}">
                    <div class="btn btn-primary">Retirar</div>
                </a>
                <a href="{{app.url_auth}}/produtos/delete/{{prod.id}}">
                    <div class="btn btn-danger">Excluir</div>
                </a>
            </td>
        </tr>
        {% endfor %}
</table>
<p>
    <a class="btn btn-primary" href="{{app.url_auth}}/relatorio">
        Relatório em PDF
    </a>
</p>
{% endblock %}